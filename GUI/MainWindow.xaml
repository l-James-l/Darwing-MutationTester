<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GUI"
    x:Class="GUI.MainWindow"
    mc:Ignorable="d"
    xmlns:vm="clr-namespace:GUI.ViewModels"
    xmlns:views="clr-namespace:GUI.Views"
    Title="Darwing" Height="450" Width="800"
    DataContext="{x:Type vm:MainWindowViewModel}" 
    WindowState="Maximized">

    <!-- View - ViewModel mapping -->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashBoardViewModel}">
            <views:DashBoardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SolutionExplorerViewModel}">
            <views:SolutionExplorerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Area -->
        <StackPanel Margin="25,16,20,8">
            <TextBlock Text="Darwing"
                   FontSize="18"
                   FontWeight="SemiBold"
                   Foreground="Black"/>

            <TextBlock Text="Software Mutation Testing"
                   FontSize="12"
                   Foreground="#94A3B8"
                   Margin="0,2,0,0"/>
        </StackPanel>
        
        <TabControl Grid.Row="1" BorderThickness="0,0,0,1" Padding="0,0,0,0">
            <TabItem Header="Dashboard" Margin="25,-2,-25,0">
                <!-- Dashboard content placeholder -->
                <ContentControl Content="{Binding DashBoardViewModel}" />
            </TabItem>

            <TabItem Header="Solution Explorer" Margin="25,-2,-25,0">
                <!-- Solution Explorer content placeholder -->
                <ContentControl Content="{Binding SolutionExplorerViewModel}" />
            </TabItem>

            <TabItem Header="Settings" Margin="25,-2,-25,0">
                <!-- Settings content placeholder -->
                <ContentControl Content="{Binding SettingsViewModel}" />
            </TabItem>
        </TabControl>
    </Grid>

</Window>
